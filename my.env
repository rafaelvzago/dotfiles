function ocp {
  _CLUSTER=${1}
  _OCP4DIR="${HOME}/Git/ocp4-clusters"
  cd "${_OCP4DIR}/${_CLUSTER}"
  git checkout master
  git pull origin master
  cd -
  cat ${_OCP4DIR}/${_CLUSTER}/auth/kubeconfig > $HOME/.kube/${_CLUSTER}-config
  KUBECONFIG="$HOME/.kube/${_CLUSTER}-config"
  export KUBECONFIG
}                                                                             # OCP4 cluster switcher function that receives the cluster name as parameter

function select_kubeconfig() {                                                # Function to select a kubeconfig file
  declare -a OPTIONS
  i=0
  for file in ~/.kube/*; do
    if [[ -f "$file" ]]; then
      server_url=$(yq eval '.clusters[0].cluster.server' "$file")
      OPTIONS+=("$((++i))")
      OPTIONS+=("$server_url ($file)")
      declare -A SERVER_TO_FILE
      SERVER_TO_FILE["$server_url"]=$file
    fi
  done

  CHOICE=$(dialog --clear \
                  --backtitle "K8s Configuration Files" \
                  --title "Choose a K8s config" \
                  --menu "Select one of the Kubernetes configuration servers:" \
                  15 60 \
                  "${#OPTIONS[@]}" \
                  "${OPTIONS[@]}" \
                  2>&1 >/dev/tty)

  clear
  if [ -z "$CHOICE" ]; then
    echo "No config selected."
  else
    CHOICE_SERVER_URL=${OPTIONS[CHOICE*2-1]}
    CHOICE_SERVER_URL=${CHOICE_SERVER_URL% (*}
    export KUBECONFIG=${SERVER_TO_FILE[$CHOICE_SERVER_URL]}
    echo "KUBECONFIG is set to ${KUBECONFIG}"
  fi
}

#!/bin/bash

function validate_kubeconfigs() {                                             # Function to validate kubeconfigs
  for file in ~/.kube/*; do
    if [[ -f "$file" ]]; then
      export KUBECONFIG="$file"
      if ! kubectl cluster-info >/dev/null 2>&1; then
        echo "Moving $file to inactive"
        mv "$file" ~/.kube/inactive/
      fi
    fi
  done
  unset KUBECONFIG
}


